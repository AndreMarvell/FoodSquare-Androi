<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/profil_back"
        android:layout_gravity="center|center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical|center">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/nophoto"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_top_text"
            android:text="J. Fukushimix"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:padding="10dp">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="15sp"
                    android:text="Nom et Prénom"
                    android:textSize="12sp"
                    android:textColor="#ff055e54"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#F2F2F2"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@id/nom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="André Marvell"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="15sp"
                    android:text="Adresse electronique"
                    android:textSize="12sp"
                    android:textColor="#ff055e54"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#F2F2F2"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/mail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="marvell@test.fr"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="15sp"
                    android:text="Commentaires"
                    android:textSize="12sp"
                    android:textColor="#ff055e54"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#F2F2F2"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/comments"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="300 point(s)"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="15sp"
                    android:text="Notes"
                    android:textSize="12sp"
                    android:textColor="#ff055e54"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#F2F2F2"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/notes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="300 point(s)"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="15sp"
                    android:text="Score"
                    android:textSize="12sp"
                    android:textColor="#ff055e54"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#F2F2F2"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="300 point(s)"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="15sp"
                    android:text="Dernière Connexion"
                    android:textSize="12sp"
                    android:textColor="#ff055e54"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#F2F2F2"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/last"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="300 point(s)"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
